{
    "name": "Python 3",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.12",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.debugpy",
                "ms-python.black-formatter",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "postCreateCommand": "pip3 install ."
}